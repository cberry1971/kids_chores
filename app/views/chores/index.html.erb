<div id="chore-list">
  <h1>Listing chores</h1>

  <table>
  <% @chores.each do |chore| %>
    <tr class="<%= cycle('list-line-odd', 'list-line-even') %>">

      <td>
        <%= image_tag chore.image_url, :class => 'list-image' %>
      </td>

      <td class="list-description">
        <dl>
          <dt><%=h chore.title %></dt>
          <dd><%=h truncate(chore.description.gsub(/<.*?>/,''),
                 :length => 80) %></dd>
        </dl>
      </td>

	  <td class="value">
        <dl>
          <dt><%= number_to_currency(chore.value) %></dt>
        </dl>
      </td>
	 
	  <td><%= button_to "Add to Wallet", wallets_path(:chore_id => chore, :child_id => session[:child_id]) %></td>

      <td class="list-actions">
        <%= link_to 'Show', chore %><br/>
        <%= link_to 'Edit', edit_chore_path(chore) %><br/>
        <%= link_to 'Destroy', chore, 
                    :confirm => 'Are you sure?',
                    :method => :delete %>
      </td>
    </tr>
  <% end %>
  </table>
</div>

<br />

<%= link_to 'New chore', new_chore_path %>
